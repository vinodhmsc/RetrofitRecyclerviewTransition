<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewScreenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@drawable/mcu_icon"
            android:transitionName="imagebcgTransition"
            android:layout_centerHorizontal="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:transitionName="imageTransition"
            android:id="@+id/profile_id"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_id"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="text"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:transitionName="nameTransition"
            android:id="@+id/name_id"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_id"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="text"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:transitionName="authorTransition"
            android:id="@+id/author_id"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_id"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="text"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:transitionName="teamTransition"
            android:id="@+id/team_id"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageThump_id"
            android:layout_below="@+id/author_id"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:text="text"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:transitionName="descTransition"
            android:id="@+id/desc_id"/>
    </RelativeLayout>
</RelativeLayout>